#include <iostream>
#include <math.h>

long long function(long long par)
{
	//-1+2-3+4-5.....n*(-1)^n
	//
	return (par % 2 == 0) ? par / 2 : -(par + 1) / 2;
}

int main()
{
    long long n;
	do
	{
		std::cin >> n;
	}
	while((n < 1) || (n > 1000000000000000));
	//1.0*10^15 = 1.0*10e15

	std::cout << function(n);

	return 0;
}
